{
    "compilerOptions": {
        "rootDir": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@@/*": [
                "./*"
            ]
        },
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "listEmittedFiles": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "vite/client",
            "node"
        ],
        "declaration": true,
        "declarationDir": "dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "test/**"
    ]
}
